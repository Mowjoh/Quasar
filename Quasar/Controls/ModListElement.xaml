<UserControl x:Class="Quasar.Controls.ModListElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quasar.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100" Width="auto" Height="Auto" MinWidth="250" MinHeight="55" MouseUp="UserControl_MouseUp" HorizontalAlignment="Stretch">
    <Grid Background="White">
        <Label x:Name="Title" Content="SkinTitle" HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Foreground="#FF0B397C"/>
        <Label x:Name="Status" Content="Status" HorizontalAlignment="Left" Margin="0,29,0,0" VerticalAlignment="Top" Foreground="#FF0B397C"/>
        <ProgressBar x:Name="Progress" Height="10" Margin="0,38,0,0" VerticalAlignment="Top" Background="#6B000000" BorderBrush="{x:Null}" BorderThickness="0" Foreground="#FF003009"/>
        <Rectangle x:Name="Border" Stroke="#FF0B397C"/>
        <Label x:Name="TypeLabel" Content="" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Top" Foreground="#FF0B397C"/>
        <Label x:Name="Category" Content="" HorizontalAlignment="Right" VerticalAlignment="Top" Width="Auto" Foreground="#FF0B397C" Margin="0,29,0,0"/>
    </Grid>
</UserControl>
