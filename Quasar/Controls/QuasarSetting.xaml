<UserControl x:Class="Quasar.Controls.QuasarSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quasar.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150" Height="150" Width="150" DataContext="{Binding RelativeSource={RelativeSource Self}}" Margin="5,5,5,5">
    <Grid Background="{DynamicResource QD2}">
        <Label x:Name="test" Content="{Binding LocalData.SettingName}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Foreground="White"/>
        <ComboBox ItemsSource="{Binding LocalData.Data}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Visibility="{Binding Path=ComboVisible, Converter={StaticResource BoolToVisibilityConverter}}" DisplayMemberPath="Name"/>
        <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding LocalData.SettingCheck}" Visibility="{Binding Path=CheckVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</UserControl>
