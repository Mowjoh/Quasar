        <!--#endregion-->

        <!--#region Templates-->
        <ControlTemplate x:Key="CutieButtonTemplate" TargetType="{x:Type Button}">
            <Grid Height="38" MaxHeight="38">
                <Border Height="38"
                        Background="{StaticResource CutiePrimaryColor}" CornerRadius="8">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentPresenter.ContentTemplate>
                            <DataTemplate>
                                <TextBlock FontFamily="{StaticResource PoppinsMedium}" FontSize="17" Foreground="{StaticResource CutieTextColor}" Text="{Binding}" />
                            </DataTemplate>
                        </ContentPresenter.ContentTemplate>
                    </ContentPresenter>
                </Border>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="CutieSmallButtonTemplate" TargetType="{x:Type Button}">
            <Grid Height="32" MaxHeight="32">
                <Border Height="32"
                        Background="{StaticResource CutiePrimaryColor}" CornerRadius="10">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ContentPresenter.ContentTemplate>
                            <DataTemplate>
                                <TextBlock FontFamily="{StaticResource PoppinsMedium}" FontSize="15" Foreground="{StaticResource CutieTextColor}" Text="{Binding}" />
                            </DataTemplate>
                        </ContentPresenter.ContentTemplate>
                    </ContentPresenter>
                </Border>
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="CutieTextBoxTemplate" TargetType="TextBox">
            <Border Height="32"
                    Background="White" CornerRadius="17">
                <ScrollViewer x:Name="PART_ContentHost" Margin="10,7" />
            </Border>
        </ControlTemplate>

