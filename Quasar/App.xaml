<Application x:Class="Quasar.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Quasar.Controls" xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" xmlns:local="clr-namespace:Quasar"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="BoolVisi" />

        <!--  Valley of the Old Carcasses meant to rot in hell  -->
        <!--#region Old Colors-->
        <SolidColorBrush x:Key="QD0" Color="#121212" />
        <SolidColorBrush x:Key="QD1" Color="#1e1e1e" />
        <SolidColorBrush x:Key="QD2" Color="#2e2e2e" />
        <SolidColorBrush x:Key="QD3" Color="#3e3e3e" />

        <SolidColorBrush x:Key="QuasarButtonBackground" Color="White" />
        <SolidColorBrush x:Key="QuasarButtonBackgroundPressed" Color="#CCCCCC" />
        <SolidColorBrush x:Key="QuasarButtonText" Color="PaleVioletRed" />

        <SolidColorBrush x:Key="QuasarBackgroundDark" Color="#262833" />
        <SolidColorBrush x:Key="QuasarBackgroundLight" Color="#262833" />
        <SolidColorBrush x:Key="QuasarBackgroundAccent" Color="#262833" />
        <SolidColorBrush x:Key="QuasarTextColorAccent" Color="#4acfac" />
        <SolidColorBrush x:Key="QuasarTextColor" Color="#ececec" />
        <!--#endregion-->

        <!--#region Old Styles-->
        <Style x:Key="ModListStyle" TargetType="{x:Type ListBox}">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}" />
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QuasarListBox" TargetType="{x:Type ListBox}">
            <Setter Property="Background" Value="{DynamicResource QD1}" />
        </Style>

        <Style x:Key="QuasarList" TargetType="ListBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="itemBorder"
                                Margin="5,0,5,0" Padding="5,0,0,0"
                                Background="Transparent" BorderBrush="Transparent" BorderThickness="1">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="itemBorder" Property="BorderBrush" Value="Yellow" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="itemBorder" Property="BorderBrush" Value="Pink" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ControlStyle" TargetType="{x:Type Controls:ModListItem}">
            <Setter Property="Height" Value="30" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Smol}" Value="true">
                    <Setter Property="Height" Value="30" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="QuasarButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource QuasarButtonBackground}" />
            <Setter Property="Foreground" Value="{StaticResource QuasarButtonText}" />
        </Style>

        <Style x:Key="QuasarLabel" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="{StaticResource QuasarTextColor}" />
            <Setter Property="FontFamily" Value="/Controls/fonts/sofiapro-light.otf" />
        </Style>

        <Style x:Key="QuasarListView" TargetType="{x:Type ListView}">
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style x:Key="QuasarComboBox" TargetType="{x:Type ComboBox}" />

        <Style x:Key="QuasarDatagrid" TargetType="{x:Type DataGrid}">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="White" />

        </Style>

        <Style x:Key="QuasarDataGridRow" TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="#C0C0C0" />
            <Setter Property="BorderBrush" Value="Pink" />
        </Style>
        <Style x:Key="QuasarDataGridCell" TargetType="{x:Type DataGridCell}">
            <Setter Property="BorderBrush" Value="#C0C0C0" />
        </Style>
        <Style x:Key="QuasarDataGridHeader" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <!--#endregion-->

        <!--#region Old Templates-->
        <ControlTemplate x:Key="QuasarButtonTemplate" TargetType="Button">
            <Grid Width="Auto" Height="Auto">
                <Border Width="Auto" Height="Auto">
                    <Path Fill="{StaticResource QuasarButtonBackground}" Stroke="Black" StrokeThickness="1">
                        <Path.Data>
                            <RectangleGeometry RadiusX="30" RadiusY="30" Rect="0,0,250,50" />
                        </Path.Data>
                        <Path.Style>
                            <Style TargetType="Path">
                                <Setter Property="Fill" Value="{StaticResource QuasarButtonBackground}" />
                            </Style>
                        </Path.Style>
                    </Path>
                </Border>
                <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                       Content="{TemplateBinding Button.Content}" FontSize="18">
                    <Label.Style>
                        <Style TargetType="Label">
                            <Setter Property="Foreground" Value="{DynamicResource CutieSecondaryColor}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding OKButtonEnabled}" Value="False">
                                    <Setter Property="Foreground" Value="Gray" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>

            </Grid>
        </ControlTemplate>
        <!--#endregion-->

        <!--  Valley of the new  -->
        <!--#region Fonts-->
        <FontFamily x:Key="PoppinsThin">pack://application:,,,/Fonts/#Poppins Thin</FontFamily>
        <FontFamily x:Key="PoppinsExtraLight">pack://application:,,,/Fonts/#Poppins Extra Light</FontFamily>
        <FontFamily x:Key="PoppinsLight">pack://application:,,,/Fonts/#Poppins Light</FontFamily>
