        <FontFamily x:Key="PoppinsBold">pack://application:,,,/Fonts/#Poppins Bold</FontFamily>
        <FontFamily x:Key="PoppinsExtraBold">pack://application:,,,/Fonts/#Poppins ExtraBold</FontFamily>
        <FontFamily x:Key="PoppinsBlack">pack://application:,,,/Fonts/#Poppins Black</FontFamily>

        <FontFamily x:Key="PoppinsThinItalic">pack://application:,,,/Fonts/#Poppins Thin Italic</FontFamily>
        <FontFamily x:Key="PoppinsExtraLightItalic">pack://application:,,,/Fonts/#Poppins ExtraLight Italic</FontFamily>
        <FontFamily x:Key="PoppinsLightItalic">pack://application:,,,/Fonts/#Poppins Light Italic</FontFamily>
        <FontFamily x:Key="PoppinsItalic">pack://application:,,,/Fonts/#Poppins Italic</FontFamily>
        <FontFamily x:Key="PoppinsMediumItalic">pack://application:,,,/Fonts/#Poppins Medium Italic</FontFamily>
        <FontFamily x:Key="PoppinsSemiBoldItalic">pack://application:,,,/Fonts/#Poppins SemiBold Italic</FontFamily>
        <FontFamily x:Key="PoppinsBoldItalic">pack://application:,,,/Fonts/#Poppins Bold Italic</FontFamily>
        <FontFamily x:Key="PoppinsExtraBoldItalic">pack://application:,,,/Fonts/#Poppins ExtraBold Italic</FontFamily>
        <FontFamily x:Key="PoppinsBlackItalic">pack://application:,,,/Fonts/#Poppins Black Italic</FontFamily>
        <!--#endregion-->

        <!--#region Base Colors-->
        <SolidColorBrush x:Key="CutiePrimaryColor" Color="#147a85" />
        <SolidColorBrush x:Key="CutieSecondaryColor" Color="#748bf2" />
        <SolidColorBrush x:Key="CutieErrorColor" Color="#CF6679" />
        <SolidColorBrush x:Key="CutieValidationColor" Color="#66CF66" />
        <!--#endregion-->

        <!--#region Text Colors-->
        <SolidColorBrush x:Key="CutieTextColor" Color="#FFFFFF" />
