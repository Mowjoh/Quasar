                                Background="{StaticResource CutieBG03}" BorderBrush="{StaticResource CutieBG03}" CornerRadius="15">
                            <TextBlock Width="Auto" Margin="20,0,20,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Style="{StaticResource CutieTextBlockStyle}" Text="{Binding Name}" />
                        </Border>
