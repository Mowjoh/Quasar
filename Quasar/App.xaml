            <Grid Height="32" MaxHeight="32">
                <Border Background="White" CornerRadius="17">
                    <Grid>
                        <ToggleButton x:Name="DropDownToggle" />
                        <ContentPresenter x:Name="ContentPresenter" />
                        <TextBlock Text=" " />
                    </Grid>
                </Border>
            </Grid>
