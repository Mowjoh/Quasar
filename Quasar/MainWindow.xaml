<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Quasar.Properties"
        xmlns:local="clr-namespace:Quasar"
        xmlns:controls="clr-namespace:Quasar.Controls"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" xmlns:view="clr-namespace:Quasar.Controls.Settings.View" xmlns:view1="clr-namespace:Quasar.Controls.Settings.Workspaces.View" xmlns:views="clr-namespace:Quasar.Controls.Build.Views" x:Name="MainWindow1" x:Class="Quasar.MainWindow"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.Quasar_WindowTitle}" MinWidth="1280" MinHeight="720" Width="1280" Height="720" Icon="Quasar.ico" DataContext="{Binding RelativeSource={RelativeSource Self}}" WindowStartupLocation="CenterScreen" Loaded="MainWindow1_Loaded">

    <Window.Resources>
        
    </Window.Resources>

    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="QuasarTaskBar"/>
    </Window.TaskbarItemInfo>

    <Grid x:Name="QuasarGrid">
        <Grid x:Name="OverlayGrid" Margin="0,0,0,0" Panel.ZIndex="1000" Background="#B3000000">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Updating}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid Width="800" Height="400" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                
                <Path x:Name="BorderColor" Stroke="{StaticResource QD2}" StrokeThickness="2" Fill="{StaticResource QD2}" Grid.RowSpan="3">
                    <Path.Data>
                        <RectangleGeometry  Rect="0,0,800,400" RadiusX="30" RadiusY="30"  />
                    </Path.Data>
                </Path>

                <Path Stroke="white" StrokeThickness="2" Fill="white" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Path.Data>
                        <RectangleGeometry  Rect="0,0,40,40"   />
                    </Path.Data>
                </Path>
                
                <Path Stroke="#FFBB527D" Fill="#FFBB527D" Height="75" Width="75"  Stretch="Uniform" Grid.Row="0" Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 11c-.55 0-1-.45-1-1V8c0-.55.45-1 1-1s1 .45 1 1v4c0 .55-.45 1-1 1zm1 4h-2v-2h2v2z"   />

                <TextBlock Grid.Row="1" Foreground="White" TextAlignment="Center" FontSize="25" Margin="0,10,0,10"><Run Text="A new Quasar version has been detected."/><LineBreak/><Run Text="A scan will be performed to include changes."/></TextBlock>

                <Button Template="{StaticResource QuasarButtonTemplate}" IsEnabled="{Binding UpdateFinished}" Command="{Binding Path=UpdateOKCommand}" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                </Button>
            </Grid>
        </Grid>
        <Grid x:Name="AppGrid">
            
            <TabControl x:Name="NewTabControl" Grid.Column="1" BorderThickness="0" Background="{DynamicResource QD1}" ItemsSource="{Binding TabItems}" SelectedItem="{Binding SelectedTabItem}" >
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Border x:Name="Border" BorderThickness="1,1,1,0" BorderBrush="#1e1e1e" CornerRadius="4,4,0,0" Margin="2,5,2,0" Width="150" Height="50">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2" TextElement.FontFamily="{StaticResource PoppinsRegular}" TextElement.FontSize="18"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource QD1}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="Transparent" />
                                            <Setter TargetName="Border" Property="BorderThickness" Value="0" />
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="Header" Value="Contents"/>
                                                <Condition Property="IsSelected" Value="True"/>
                                            </MultiTrigger.Conditions>
                                            <MultiTrigger.Setters>
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </MultiTrigger.Setters>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="Header" Value="Contents"/>
                                                <Condition Property="IsSelected" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <MultiTrigger.Setters>
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </MultiTrigger.Setters>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="{x:Type Grid}">
                        <Setter Property="Background" Value="{DynamicResource QD0}"/>
                    </Style>
                </TabControl.Resources>
            </TabControl>
            
        </Grid>
    </Grid>
</Window>
