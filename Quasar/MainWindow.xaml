<Window x:Name="MainWindow1" x:Class="Quasar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Quasar.Properties"
        xmlns:local="clr-namespace:Quasar"
        xmlns:controls="clr-namespace:Quasar.Controls"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.Title}" MinWidth="800" MinHeight="550" Width="1500" Height="800">
    <Grid x:Name="MainGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="ContentGrid" Grid.Row="1">
            <TabControl x:Name="ContentTabControl">
                <TabItem x:Name="Management" Header="Mod Management">
                    <Grid x:Name="ManagementGrid" Background="#FFE5E5E5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="ModTypeSelect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="221" Height="22" IsReadOnly="True" IsEditable="True" Text="Mod Type" Foreground="Black"/>
                        <ComboBox x:Name="ModFilterSelect" Margin="309,10,10,0" VerticalAlignment="Top" Height="22" IsReadOnly="True" IsEditable="True" Text="Filter" Foreground="Black" IsEnabled="False"/>
                        <ScrollViewer x:Name="ModScrollViewer" Margin="10,37,10,10" Background="#19000000">
                            <StackPanel x:Name="SkinStackPanel"/>
                        </ScrollViewer>
                        <GroupBox x:Name="ModInfoGroup" Header="Skin Information" BorderBrush="#FF036EAE" Margin="7,10,15,195" Grid.Column="1">
                            <StackPanel>
                                <Label x:Name="SkinNameLabel" Content="Name"/>
                                <Label x:Name="SkinAuthorLabel" Content="Author"/>
                                <Label x:Name="SkinDownloadsLabel" Content="Downloads"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox x:Name="ModUpdateGroup" Header="Version Control" BorderBrush="#FF036EAE" Margin="10,0,10,10" Grid.Column="1" Height="180" VerticalAlignment="Bottom">
                            <StackPanel>
                                <Label x:Name="SkinVersionLabel" Content="Version"/>
                                <Label x:Name="SkinStatusLabel" Content="Status"/>
                                <Button x:Name="ModUpdateButton" Content="Check for updates" Width="150" HorizontalAlignment="Left" Margin="0,50,0,0"/>
                            </StackPanel>
                        </GroupBox>
                        <Label x:Name="ModFileBrowserLabel" Content="File Browser" HorizontalAlignment="Left" Margin="5,6,0,0" VerticalAlignment="Top" Width="157" Height="26" Grid.Column="2"/>
                        <TreeView x:Name="ModFileView" Margin="10,37,10,10" Grid.Column="2"/>
                    </Grid>
                </TabItem>
                <TabItem x:Name="Assigning" Header="Mod Assignment">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem x:Name="AddPackage" Header="Add &amp; Package" Margin="-2,-2,-2,0">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem x:Name="Setting" Header="Settings" Margin="-2,-2,-2,0">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid x:Name="HeaderGrid" Background="#FF021F2C">
            <Button x:Name="DownloadButton" Content="Download Test File" Click="StartButton_Click" Width="200" Height="30" Margin="10,4,1282,6"/>
            <Button x:Name="CleanFolders_Button" Content="Clear Documents Folder" Click="ClearFolders" Width="200" Height="30" Margin="224,4,1068,6"/>
        </Grid>

    </Grid>
</Window>
