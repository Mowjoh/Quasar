<Window x:Class="Quasar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Quasar.Properties"
        xmlns:local="clr-namespace:Quasar"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.Title}" Height="450" Width="800">
    <Grid x:Name="MainGrid" Background="#FF223946">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="327"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="CategoryGrid"/>

        <Button x:Name="StartButton" Content="{x:Static p:Resources.StartButton}" HorizontalAlignment="Left" Margin="138,117,0,0" VerticalAlignment="Top" Width="130" Click="StartButton_Click" Height="20" Grid.Column="2"/>
        <Grid x:Name="ItemGrid" Grid.Column="1">
            <ListBox x:Name="ModListBox" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="281" Background="#67000000" Foreground="White"/>
        </Grid>

    </Grid>
</Window>
