<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Quasar.Properties"
        xmlns:local="clr-namespace:Quasar"
        xmlns:controls="clr-namespace:Quasar.Controls"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Name="MainWindow1" x:Class="Quasar.MainWindow"
        mc:Ignorable="d"
        Title="Quasar" MinWidth="1280" MinHeight="720" Width="1280" Height="720" Icon="Quasar.ico" DataContext="{Binding RelativeSource={RelativeSource Self}}" >
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="QuasarTaskBar">

        </TaskbarItemInfo>
    </Window.TaskbarItemInfo>

    <Window.Resources>
        <CollectionViewSource Source="{Binding ListMods}" x:Key="CollectionOMods" Filter="ShowOnlyNonFilteredMods" x:Name="ModsCollectionViewSource" IsLiveFilteringRequested="True">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Game.ID" />
                <scm:SortDescription PropertyName="LocalMod.TypeID" />
                <scm:SortDescription PropertyName="LocalMod.Name" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <CollectionViewSource Source="{Binding ListContents}" x:Key="CollectionOContents" Filter="ShowOnlyNonFilteredContents" IsLiveFilteringRequested="True">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Game.ID" />
                <scm:SortDescription PropertyName="LocalMod.TypeID" />
                <scm:SortDescription PropertyName="LocalMod.Name" />
                <scm:SortDescription PropertyName="LocalModType.Name" />
                <scm:SortDescription PropertyName="LocalMapping.Name" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <CollectionViewSource Source="{Binding ContentMappings}" x:Key="CollectionOContentMappings" Filter="ShowOnlyRelatedAssociation" IsLiveFilteringRequested="True">
        </CollectionViewSource>
        <CollectionViewSource Source="{Binding CurrentGameApiModType.Categories}" x:Key="ModManagementFilterCollection" IsLiveFilteringRequested="True">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Name"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <CollectionViewSource Source="{Binding AssociationCurrentGDC.Items}" x:Key="AssignmentElementCollection" IsLiveFilteringRequested="True">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Name"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <CollectionViewSource Source="{Binding AssociationCorrespondingIMT}" x:Key="AssignmentTypesCollection" IsLiveFilteringRequested="True">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Name"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <CollectionViewSource Source="{Binding IMTCurrentGDC.Items}" x:Key="ContentCollection" IsLiveFilteringRequested="True">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Name"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>
    <Grid x:Name="QuasarGrid">
        <Grid x:Name="OverlayGrid" Panel.ZIndex="1000" Opacity="100" Background="#FF2D2D2D" d:IsHidden="True">
            <Grid.RenderTransform>
                <ScaleTransform ScaleX="0" ScaleY="1"/>
            </Grid.RenderTransform>

            <ListBox x:Name="GamesListView" ItemsSource="{Binding Path=Games}" Height="240" Padding="0" BorderThickness="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" ScrollViewer.CanContentScroll="False" Background="#FF2D2D2D"  VerticalAlignment="Center" SelectionChanged="GamesListView_SelectionChanged">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel IsItemsHost="True" Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Width="200" Margin="10,0,10,0" HorizontalAlignment="Center" Height="230">
                            <TextBlock Text="{Binding Name}" Width="200" Margin="-8,0,-8,5" HorizontalAlignment="Center" Foreground="#FF3caaea" VerticalAlignment="Center" TextAlignment="Center" FontSize="18" FontFamily="Sofia Pro" />
                            <Image Source="{Binding ImagePath}"  Width="200" Margin="-8,0,-8,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Grid x:Name="AppGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TabControl x:Name="AppTabControl" Grid.Column="1" BorderThickness="0" Background="{DynamicResource QD1}">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Border x:Name="Border" BorderThickness="1,1,1,0" BorderBrush="#1e1e1e" CornerRadius="4,4,0,0" Margin="2,5,2,0" Width="150" Height="50">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource QD1}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="Transparent" />
                                            <Setter TargetName="Border" Property="BorderThickness" Value="0" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="{x:Type Grid}">
                        <Setter Property="Background" Value="{DynamicResource QD0}"/>
                    </Style>
                </TabControl.Resources>
                <TabItem x:Name="ManagementTab" Header="{x:Static p:Resources.ManagementTabHeader}" Foreground="{DynamicResource QuasarTextColor}" >
                    <Grid x:Name="ManagementGrid" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <ComboBox x:Name="ManagementAPITypeSelect" ItemsSource="{Binding Path=CurrentGame.GameModTypes}" DisplayMemberPath="Name" SelectedValuePath="ID" Margin="10,15,0,0" VerticalAlignment="Top" Height="22" IsReadOnly="True" IsEditable="True" Text="{x:Static p:Resources.ModTypeSelectText}" Foreground="Black" SelectionChanged="ModTypeSelectionChanged" ShouldPreserveUserEnteredPrefix="True" Background="{DynamicResource QuasarBackgroundDark}" HorizontalAlignment="Left" Width="300" Style="{DynamicResource QuasarComboBox}"/>
                        <ComboBox x:Name="ManagementAPICategorySelect" ItemsSource="{Binding Source={StaticResource ModManagementFilterCollection}, IsAsync=True}" DisplayMemberPath="Name" SelectedValuePath="ID" Margin="315,15,0,0" VerticalAlignment="Top" Height="22" IsEditable="True" Text="{x:Static p:Resources.ModFilterSelectText}" Foreground="Black" IsEnabled="True" SelectionChanged="FilterSelectionChanged" HorizontalAlignment="Left" Width="300"/>
                        <ListView x:Name="ManagementModListView" SelectionChanged="ModSelected" ItemsSource="{Binding Source={StaticResource CollectionOMods}, IsAsync=True}" Background="Transparent" Margin="0,0,0,0" Grid.Row="2" BorderThickness="0">
                            <ListView.Resources>

                            </ListView.Resources>
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel  />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        <Grid Grid.Row="1" Margin="10,0,0,0" Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>
                            <Label FontStyle="Italic" Content="ModName" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>
                            <Label FontStyle="Italic" Content="Status" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="0"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Visibility="Hidden" Style="{DynamicResource QuasarLabel}"/>

                            <Label FontStyle="Italic" Content="Type" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="1"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}" />
                            <Label FontStyle="Italic"  Content="Category" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="2"    HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>
                            <Label FontStyle="Italic" Content="Mod Game" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="3"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>
                            <Label FontStyle="Italic" Content="Actions" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="4"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>

                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="Contents" Header="Content Management" Foreground="{DynamicResource QuasarTextColor}">
                    <Grid x:Name="ContentGrid" Background="{DynamicResource QD1}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="35*"/>
                            <RowDefinition Height="656*"/>
                        </Grid.RowDefinitions>
                        <ComboBox x:Name="ContentIMTSelect" ItemsSource="{Binding GameIMT}" DisplayMemberPath="Name" SelectedValuePath="ID" Margin="10,15,0,0" VerticalAlignment="Top" Height="22" IsReadOnly="True" IsEditable="True" Text="{x:Static p:Resources.ModTypeSelectText}" Foreground="Black" SelectionChanged="IMTTypeSelect" ShouldPreserveUserEnteredPrefix="True" Background="{DynamicResource QuasarBackgroundDark}" HorizontalAlignment="Left" Width="300"/>
                        <ComboBox x:Name="ContentGDCSelect" ItemsSource="{Binding Source={StaticResource ContentCollection}, IsAsync=True}" DisplayMemberPath="Name" SelectedValuePath="ID" Margin="315,15,0,0" VerticalAlignment="Top" Height="22" IsReadOnly="True" IsEditable="True" Text="{x:Static p:Resources.ModFilterSelectText}" Foreground="Black" IsEnabled="True" SelectionChanged="IMTGDCItemSelect" HorizontalAlignment="Left" Width="300"/>
                        <Button x:Name="Reset" Width="15" Height="15" Margin="630,20,0,0" VerticalAlignment="Top" HorizontalAlignment="left" Click="Reset_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Path x:Name="Minimize" Stroke="White" Fill="White" Data="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" Height="15" Width="15"  Stretch="Uniform" ToolTip="Reset Filters" />
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <ListView x:Name="ContentListView" SelectionChanged="ContentSelected" ItemsSource="{Binding Source={StaticResource CollectionOContents}, IsAsync=True}" Background="{DynamicResource QD1}" Margin="0,0,10,0" Grid.Row="2" BorderThickness="0" >
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel  />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=Filter}" Value="true">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        <Grid Grid.Row="1" Margin="10,0,0,0" Background="{x:Null}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35*"/>
                                <ColumnDefinition Width="35*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="20*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>
                            <Label FontStyle="Italic" Content="Mod Name" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>
                            <Label FontStyle="Italic" Content="Content Name" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="1"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}" />
                            <Label FontStyle="Italic"  Content="Detected Type" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="2"    HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>
                            <Label FontStyle="Italic" Content="Association" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="3"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>
                            <Label FontStyle="Italic" Content="Slot" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="4"  HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>
                            <Label FontStyle="Italic" Content="Actions" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="5"  HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>

                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="Assigning" Header="{x:Static p:Resources.AssignmentTabHeader}" Foreground="{DynamicResource QuasarTextColor}">
                    <Grid Background="#FFE5E5E5">
                        <Grid x:Name="AssignationGameBlock" Grid.ColumnSpan="2" Grid.Column="2" Background ="Black" Panel.ZIndex="500" Visibility="{Binding Path=GameSelectVisibility}">
                            <Label Content="Please select a game first" HorizontalAlignment="Center" Foreground="Wheat"  VerticalAlignment="Center" FontSize="36" />
                        </Grid>
                        <Grid x:Name="AssignmentGrid" Background="{DynamicResource QD1}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Game Element" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Style="{DynamicResource QuasarLabel}" />
                            <Label Content="Name" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>
                            <Label Content="Mod Types" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="2" VerticalAlignment="Center" HorizontalContentAlignment="Center" Style="{DynamicResource QuasarLabel}" />
                            <Label Content="Association" Foreground="{DynamicResource QuasarTextColor}" Grid.Column="3" Margin="0,0,20,0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Style="{DynamicResource QuasarLabel}" />

                            <Button x:Name="ResetSlotsButton" HorizontalAlignment="Right" Grid.Column="3" Width="40" Click="ResetSlotsButton_Click" >
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Path x:Name="TreeView" Stroke="White" Fill="White" Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm5 11H7v-2h10v2z" Height="15" Width="15" Margin="10,0,0,0" Stretch="Uniform" ToolTip="Revert slots to default" />
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <ListBox x:Name="AssociationGameDataList" Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Path=GameDataCategories}" Style="{DynamicResource QuasarListBox}" SelectionChanged="AssociationGameDataList_SelectionChanged" Background="{DynamicResource QD1}" BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{Binding Name}" Width="Auto" Foreground="White" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <ListBox x:Name="AssociationGameElementDataList" Grid.Row="1" Grid.Column="1" Style="{DynamicResource QuasarListBox}" Background="{DynamicResource QD1}" ItemsSource="{Binding Source={StaticResource AssignmentElementCollection}, IsAsync=True}" BorderThickness="0" SelectionChanged="AssociationGameElementChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{Binding Name}" Width="Auto" Foreground="White" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <ListBox x:Name="AssociationTypeDataList" Grid.Row="1" Grid.Column="2" Style="{DynamicResource QuasarListBox}" Background="{DynamicResource QD1}" ItemsSource="{Binding Source={StaticResource AssignmentTypesCollection}, IsAsync=True}" BorderThickness="0" SelectionChanged="AssociationIMTChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{Binding Name}" Width="Auto" Foreground="White" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Grid x:Name="AssociationGrid" Grid.Column="3" Grid.Row="1" Margin="10,0,0,0" Background="#33000000">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Label Content="Available items" Grid.Row="0" Grid.Column="0" Foreground="{DynamicResource QuasarTextColor}" HorizontalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>
                                <Label Content="Available slots" Grid.Row="0" Grid.Column="1" Foreground="{DynamicResource QuasarTextColor}" HorizontalContentAlignment="Center" Style="{DynamicResource QuasarLabel}"/>

                                <ListView x:Name="ItemSourceListBox"  Grid.Row="1" Grid.Column="0" Style="{DynamicResource QuasarListBox}" ItemsSource="{Binding AssociationContentMappings}" Background="{DynamicResource QD1}" BorderThickness="0" AllowDrop="True" DragEnter="ItemSourceListBox_DragEnter" PreviewMouseLeftButtonDown="ItemSourceListBox_PreviewMouseLeftButtonDown" MouseMove="ItemSourceListBox_MouseMove">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,5,0,5">
                                                <Path x:Name="BorderColor" Stroke="Gray" StrokeThickness="2" Fill="{DynamicResource QuasarBackgroundDark}">
                                                    <Path.Data>
                                                        <RectangleGeometry x:Name="ColoredRectangle" Rect="0,0,270,30" RadiusX="5" RadiusY="10"   />
                                                    </Path.Data>
                                                </Path>
                                                <Label Content="{Binding Name}" HorizontalContentAlignment="Center" Foreground="{DynamicResource QuasarTextColor}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <ListView x:Name="ItemSlotListBox" Grid.Row="1" Grid.Column="1" AllowDrop="True" Style="{DynamicResource QuasarListBox}" ItemsSource="{Binding AssociationSlots}" Background="{DynamicResource QD1}" BorderThickness="0">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,5,0,5" AllowDrop="True" Drop="ItemSlotListBox_Drop">
                                                <Label Name="SlotName" Visibility="Hidden" Content="{Binding SlotName}"/>
                                                <Path x:Name="BorderColor" Stroke="{Binding BorderColor}" StrokeThickness="2" Fill="{DynamicResource QuasarBackgroundDark}">
                                                    <Path.Data>
                                                        <RectangleGeometry x:Name="ColoredRectangle" Rect="0,0,270,30" RadiusX="5" RadiusY="10"   />
                                                    </Path.Data>
                                                </Path>
                                                <Label Content="{Binding Name}" HorizontalContentAlignment="Center" Foreground="{DynamicResource QuasarTextColor}"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="Build" Header="Build" Foreground="{DynamicResource QuasarTextColor}" >
                    <Grid Background="#FFE5E5E5">
                        <Grid x:Name="BuilderGameBlock" Background ="Black" Panel.ZIndex="500" Visibility="{Binding Path=GameSelectVisibility}" d:IsHidden="True">
                            <Label Content="Please select a game first" HorizontalAlignment="Center" Foreground="Wheat"  VerticalAlignment="Center" FontSize="36" />
                        </Grid>
                        <Grid x:Name="BuilderGrid" Background="{DynamicResource QD1}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Grid x:Name="BuilderSettingsGrid" Grid.Row="0" Grid.Column="0" Background="{DynamicResource QD1}">
                                <Label Content="Active Workspace :" HorizontalAlignment="Left" VerticalAlignment="Top" Width="173" Foreground="{DynamicResource QuasarTextColor}" Margin="10,0,0,0"/>
                                <Label x:Name="BuilderWorkspaceName" Content="WorkspaceName" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" Margin="10,26,10,0"/>
                                <Label Content="Mod Loader :" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Width="103" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <ComboBox x:Name="BuilderModLoaderCombo" Margin="10,109,10,0" VerticalAlignment="Top" ItemsSource="{Binding GameBuilders}" DisplayMemberPath="Name">
                                </ComboBox>
                                <Label Content="Transfer Options" HorizontalAlignment="Left" Margin="9,161,0,0" VerticalAlignment="Top" Width="103" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <RadioButton x:Name="BuilderLocalRadio" Content="Local Transfer" HorizontalAlignment="Left" Margin="10,190,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" GroupName="BuildMethod" IsChecked="True"/>
                                <RadioButton x:Name="BuilderFTPRadio" Content="Wireless Transfer (FTP)" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" GroupName="BuildMethod"/>
                                <RadioButton Content="Comparative mode" HorizontalAlignment="Left" Margin="9,261,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" GroupName="FileMethod" IsEnabled="False"/>
                                <RadioButton x:Name="BuilderWipeCreateRadio" Content="Wipe and Recreate" HorizontalAlignment="Left" Margin="10,281,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" GroupName="FileMethod" IsChecked="True"/>
                            </Grid>
                            <Grid x:Name="BuilderLocalBuildGrid" Grid.Column="2" Background="{DynamicResource QD1}">

                                <ComboBox x:Name="BuilderSDCombo" HorizontalAlignment="Left" Margin="10,31,-8,0" VerticalAlignment="Top" Width="226" ItemsSource="{Binding USBDriveLabels}" />
                                <Label Content="Select your SD :" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="103" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <Button x:Name="BuilderBuild" Content="Build IT !" HorizontalAlignment="Left" Margin="10,283,0,0" VerticalAlignment="Top" Width="133" Click="Build_Button"/>
                                <Button x:Name="BuilderDriveRefreshButton" Content="Refresh Drive List" HorizontalAlignment="Left" Margin="241,31,0,0" VerticalAlignment="Top" Width="133" Height="22" Click="BuilderDriveRefreshButton_Click"/>
                            </Grid>
                            <Grid x:Name="BuilderFTPGrid" Grid.Column="3"  Background="{DynamicResource QD1}">
                                <Label Content="Enter your Switch's IP address :" HorizontalAlignment="Left" VerticalAlignment="Top" Width="179" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}" Margin="10,10,0,0"/>
                                <TextBox x:Name="BuildFTPAddress" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" Text="192.168." VerticalAlignment="Top" Width="179"/>
                                <Label Content="Port :" HorizontalAlignment="Left" Margin="194,10,0,0" VerticalAlignment="Top" Width="179" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <TextBox x:Name="BuildFTPPort" HorizontalAlignment="Left" Height="23" Margin="194,41,0,0" TextWrapping="Wrap" Text="5000" VerticalAlignment="Top" Width="93"/>
                                <Button x:Name="BuilderFTPTest" Content="Test And Save Connection Info" HorizontalAlignment="Left" Margin="10,171,0,0" VerticalAlignment="Top" Width="244" Click="FTP_Test"/>
                                <TextBox x:Name="BuildFTPUN" HorizontalAlignment="Left" Height="23" Margin="10,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="136" IsEnabled="{Binding BuildPWRadio.IsChecked}"/>
                                <RadioButton x:Name="BuildAnonRadio" Content="Anonymous" HorizontalAlignment="Left" Margin="292,37,0,0" VerticalAlignment="Top" GroupName="AnonGroup" Foreground="White" IsChecked="True"/>
                                <RadioButton x:Name="BuildPWRadio" Content="Username / Password" HorizontalAlignment="Left" Margin="292,52,0,0" VerticalAlignment="Top" GroupName="AnonGroup" Foreground="White" Checked="RadioButton_Checked"/>
                                <TextBox x:Name="BuildFTPPW" HorizontalAlignment="Left" Height="23" Margin="151,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="136" IsEnabled="{Binding BuildPWRadio.IsChecked}"/>
                                <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Width="136" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}" Margin="5,82,0,0"/>
                                <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Width="136" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}" Margin="146,82,0,0"/>
                            </Grid>
                            <Grid x:Name="BuilderStatsGrid" Grid.Row="2" Grid.Column="0" Background="{DynamicResource QD1}">
                                <Label Content="Statistics :" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="103" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                            </Grid>
                            <Grid x:Name="BuilderBuildGrid" Grid.ColumnSpan="3" Grid.Column="1" Grid.RowSpan="1" Grid.Row="2" Background="{DynamicResource QD1}">
                                <ProgressBar x:Name="BuilderProgress" Value="0" Height="10" VerticalAlignment="Top" />
                                <ScrollViewer Margin="0,10,0,0" >
                                    <TextBlock x:Name="BuilderLogs" TextWrapping="Wrap" Foreground="White" Background="#33000000" />
                                </ScrollViewer>
                            </Grid>

                            <Grid x:Name="SeparatorGrid" Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Background="DarkGray"/>
                            <Grid x:Name="SeparatorGrid1" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Background="DarkGray"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="ModCreation" Header="Add Mods" Visibility="Collapsed" d:IsHidden="True" Foreground="{DynamicResource QuasarTextColor}">
                    <Grid Background="#FFE5E5E5">
                        <Grid x:Name="CreationGameBlock" Grid.ColumnSpan="2" Grid.Column="2" Background ="Black" Panel.ZIndex="500">
                            <Label Content="Please select a game first" HorizontalAlignment="Center" Foreground="Wheat"  VerticalAlignment="Center" FontSize="36" />
                        </Grid>
                        <Label Content="Section Under Construction..." HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="36"/>
                    </Grid>
                </TabItem>
                <TabItem x:Name="IMTTab" Header="{x:Static p:Resources.InternalModTypesHeader}"  Foreground="{DynamicResource QuasarTextColor}">
                    <Grid x:Name="IMTGrid" Background="{DynamicResource QD1}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid x:Name="IMTGameBlock" Grid.ColumnSpan="2" Background ="Black" Panel.ZIndex="500" Visibility="{Binding Path=GameSelectVisibility}" d:IsHidden="True">
                            <Label Content="Please select a game first" HorizontalAlignment="Center" Foreground="Wheat"  VerticalAlignment="Center" FontSize="36" />
                        </Grid>
                        <Grid x:Name="IMTTreeGrid" Background="{DynamicResource QD1}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Label x:Name="IMTContentsLabel" Content="Contents :" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="101" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                            <Button x:Name="IMTAddFileButton" Content="Add File" Margin="116,13,0,0" VerticalAlignment="Top" Height="22" RenderTransformOrigin="-0.441,0.545" HorizontalAlignment="Left" Width="130" Click="IMTAddFile"/>
                            <Button x:Name="IMTDelFileButton" Content="Delete File" Margin="0,12,233,0" VerticalAlignment="Top" Height="22" RenderTransformOrigin="-0.441,0.545" Click="IMTDeleteFile" HorizontalAlignment="Right" Width="130"/>
                            <Button x:Name="Test_Files" Content="Test Definitions" Margin="0,13,10,0" VerticalAlignment="Top" Height="22" RenderTransformOrigin="-0.441,0.545" Click="IMTTestFile" HorizontalAlignment="Right" Width="130"/>
                            <DataGrid x:Name="IMTDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"  Margin="10" Grid.Row="1" SelectionChanged="DataGridRowSelected" Style="{DynamicResource QuasarDatagrid}" RowStyle="{DynamicResource QuasarDataGridRow}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Path" Binding="{Binding SourcePath}" Width="8*" HeaderStyle="{DynamicResource QuasarDataGridHeader}"/>
                                    <DataGridTextColumn Header="FileName" Binding="{Binding SourceFile}" Width="6*" HeaderStyle="{DynamicResource QuasarDataGridHeader}"/>
                                    <DataGridCheckBoxColumn Header="Mandatory" Binding="{Binding Mandatory}" Width="2*" HeaderStyle="{DynamicResource QuasarDataGridHeader}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid x:Name="IMTManagementGrid" Grid.Column="1" Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="261"/>
                                <RowDefinition Height="135*"/>
                                <RowDefinition Height="92*"/>
                            </Grid.RowDefinitions>
                            <Label x:Name="IMTSelectLabel" Content="Select an Internal Mod Type" HorizontalAlignment="Left" Margin="0,12,0,0" VerticalAlignment="Top" Width="166" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}" Height="24"/>
                            <ComboBox x:Name="InternalModTypeSelect" ItemsSource="{Binding GameIMT}" DisplayMemberPath="Name" Margin="171,16,152,0" VerticalAlignment="Top" Height="22" SelectionChanged="InternalModTypeSelected"/>
                            <Button x:Name="IMTAddTypeButton" Content="Add New Type" Margin="0,16,10,0" VerticalAlignment="Top" Height="22" HorizontalAlignment="Right" Width="118"/>
                            <Label x:Name="IMTRefWarningLabel" Content="References : You can easily make your paths dynamic (detecting c00 by using c{00} for instance)" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" FontStyle="Italic" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}" Height="24" Width="504"/>
                            <Separator HorizontalAlignment="Left" Height="14" Margin="0,55,0,0" VerticalAlignment="Top" Width="588"/>
                            <Grid x:Name="IMTActionGrid" Grid.Row="1" Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="205*"/>
                                    <ColumnDefinition Width="205*"/>
                                    <ColumnDefinition Width="100*"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="IMTRefCategoryCombobox" Margin="10,8,10,0" VerticalAlignment="Top">
                                    <ComboBoxItem Content="Numbers" HorizontalAlignment="Left" Width="258"/>
                                </ComboBox>
                                <ComboBox x:Name="IMTRefCombobox" Margin="10,8,10,0" VerticalAlignment="Top" Grid.Column="1">
                                    <ComboBoxItem Content="One digit {0}" HorizontalAlignment="Left" Width="258"/>
                                    <ComboBoxItem Content="Two digits {00}" HorizontalAlignment="Left" Width="258"/>
                                    <ComboBoxItem Content="Three digits {000}" HorizontalAlignment="Left" Width="258"/>
                                    <ComboBoxItem Content="Four digits {0000}" HorizontalAlignment="Left" Width="258"/>
                                </ComboBox>
                                <Button x:Name="IMTAddRefButton" Content="Add Reference" Grid.Column="2" Margin="10,8,10,0" VerticalAlignment="Top" Height="22"/>
                            </Grid>
                            <Grid x:Name="IMTFileManagementGrid" Grid.Row="2" Background="Transparent">
                                <Button x:Name="IMTSaveButton" Content="Save File and Path" Margin="0,219,10,0" VerticalAlignment="Top" Height="23" RenderTransformOrigin="0.24,3.217" HorizontalAlignment="Right" Width="149" Click="IMTInfoSave"/>
                                <TextBox x:Name="IMTPathText" Height="23" Margin="82,3,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" IsEnabled="False"/>
                                <Label x:Name="IMTPathLabel" Content="Path" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.333,0.962" Margin="10,5,0,0" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <TextBox x:Name="IMTFileText" Height="23" Margin="82,31,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" IsEnabled="False"/>
                                <Label x:Name="IMTFileLabel" Content="File Name" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <CheckBox x:Name="IMTMandatory" Content="Mandatory" HorizontalAlignment="Left" Margin="10,236,0,0" VerticalAlignment="Top" IsEnabled="False" Foreground="{DynamicResource QuasarTextColor}"/>
                                <Label x:Name="IMTFileLabel_Copy" Content="Output Name" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <TextBox x:Name="IMTBuilderOutputFilePath" Height="23" Margin="98,136,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" IsEnabled="False"/>
                                <Label x:Name="IMTFileLabel_Copy1" Content="Output Path" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <TextBox x:Name="IMTBuilderOutputFolderPath" Height="23" Margin="98,166,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" IsEnabled="False"/>
                                <ComboBox x:Name="IMTGameBuilderCombo" HorizontalAlignment="Left" Margin="98,109,0,0" VerticalAlignment="Top" Width="506" ItemsSource="{Binding GameBuilders}" DisplayMemberPath="Name" SelectionChanged="IMTGameBuilderSelected"/>
                                <Label x:Name="IMTFileLabel_Copy2" Content="Mod Builder" HorizontalAlignment="Left" Margin="10,109,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                            </Grid>
                            <Grid x:Name="IMTAssociationGrid" Grid.Row="3" Background="Transparent">
                                <Label x:Name="IMTAssociationLabel" Content="Internal Mod Type Association" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <ComboBox x:Name="IMTAssotiationSelect" ItemsSource="{Binding Path=GameDataCategories}"  DisplayMemberPath="Name" Margin="203,12,10,0" VerticalAlignment="Top" SelectionChanged="IMTAssotiationSelectChanged" IsEnabled="False"/>
                                <Label x:Name="IMTSlotsLabel" Content="Slots" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}" RenderTransformOrigin="0.543,-0.833"/>
                                <TextBox x:Name="IMTSlotsText" HorizontalAlignment="Left" Height="23" Margin="203,41,0,0" TextWrapping="Wrap" Text="8" VerticalAlignment="Top" Width="77" HorizontalContentAlignment="Right" Padding="0,0,5,0" IsEnabled="False"/>
                                <Label x:Name="IMTCustoSlotLabel" Content="Custom Slot Name" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <TextBox x:Name="IMTCustomNameText" Height="23" Margin="203,98,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" IsEnabled="False"/>
                                <Label x:Name="IMTCustomWarningLabel" Content="If you have selected Other, please type out a name" HorizontalAlignment="Left" Margin="203,69,0,0" VerticalAlignment="Top" FontStyle="Italic" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}"/>
                                <Separator HorizontalAlignment="Left" Height="14" Margin="0" VerticalAlignment="Top" Width="588"/>
                            </Grid>
                            <Separator HorizontalAlignment="Left" Height="14" Margin="0,10,0,0" VerticalAlignment="Top" Width="588" Grid.Row="4"/>
                            <Label x:Name="IMTSaveWarningLabel" Content="Caution: This action will remove all associations with this type." HorizontalAlignment="Center" Margin="146,24,136,0" VerticalAlignment="Top" FontStyle="Italic" Grid.Row="4" Foreground="{DynamicResource QuasarTextColor}" Style="{DynamicResource QuasarLabel}" Height="24" Width="332"/>
                            <Button x:Name="IMTSaveXMLButton" Content="Save Internal Mod Type" HorizontalAlignment="Center" Margin="234,55,224,0" VerticalAlignment="Top" Width="156" Grid.Row="4" Click="IMTSaveXML" Height="20"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="Setting" Header="{x:Static p:Resources.SettingsTabHeader}" Foreground="{DynamicResource QuasarTextColor}">
                    <Grid x:Name="SettingsGrid" Background="{DynamicResource QD1}">
                        <ItemsControl x:Name="SettingsItemControl" ItemsSource="{Binding SettingsList}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </TabItem>
                <TabItem x:Name="QuasarWorkspaceTab" Header="Workspaces" Foreground="{DynamicResource QuasarTextColor}">
                    <Grid Background="#FFE5E5E5">
                        <Grid x:Name="CreationGameBlock1" Grid.ColumnSpan="2" Grid.Column="2" Background ="Black" Panel.ZIndex="500"  Visibility="{Binding Path=GameSelectVisibility}" d:IsHidden="True">
                            <Label Content="Please select a game first" HorizontalAlignment="Center" Foreground="Wheat"  VerticalAlignment="Center" FontSize="36" />
                        </Grid>
                        <Grid x:Name="WorkspaceGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="500"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="WorkspaceAddButton" Content="Add a new Workspace" Margin="0,0,0,10" VerticalAlignment="Bottom" Height="26" HorizontalAlignment="Center" Width="153" RenderTransformOrigin="1.172,0.308" Click="AddWorkspace"/>
                            <ListBox x:Name="WorkspaceListBox" Margin="10,45,10,47" Style="{DynamicResource QuasarListBox}" ItemsSource="{Binding QuasarWorkspaces}" SelectionChanged="WorkspaceSelected">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{Binding Name}" Width="Auto" Foreground="White" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <TextBox x:Name="WorkspaceNameTextBox" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="10,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="458"/>
                            <Button x:Name="WorkspaceSaveNameButton" Content="Save name" Grid.Column="2" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="143" Height="24" Click="RenameWorkspaces"/>
                            <Button x:Name="WorkspaceEmptyButton" Content="Empty this Workspace" Grid.Column="2" HorizontalAlignment="Left" Margin="10,196,0,0" VerticalAlignment="Top" Width="143" Height="26" Background="#FFD3945E" Click="EmptyWorkspace"/>
                            <Button x:Name="WorkspaceDuplicateButton" Content="Duplicate this Workspace" Grid.Column="2" HorizontalAlignment="Left" Margin="10,140,0,0" VerticalAlignment="Top" Width="143" Height="26" Click="DuplicateWorkspace"/>
                            <Label Content="Workspace Name" Grid.Column="1" Margin="10,10,10,0" VerticalAlignment="Top" Foreground="White"/>
                            <Label Content="Workspace Actions" Grid.Column="1" Margin="10,140,10,0" VerticalAlignment="Top" Foreground="White"/>
                            <Label Content="Workspace Info :" Grid.Column="1" Margin="10,346,10,0" VerticalAlignment="Top" Foreground="White"/>
                            <Label x:Name="WorkspaceAssignmentLabel" Content="Assignments :" Grid.Column="2" Margin="10,346,10,0" VerticalAlignment="Top" Foreground="White"/>
                            <Label x:Name="WorkspaceBuildLabel" Content="Latest Build Date :" Grid.Column="2" Margin="10,372,10,0" VerticalAlignment="Top" Foreground="White"/>
                            <Button x:Name="WorkspaceEnableButton_Copy" Content="(FTP Only) Set as default ARCropolis Workspace" Grid.Column="2" HorizontalAlignment="Left" Margin="10,285,0,0" VerticalAlignment="Top" Width="313" Height="26"/>
                            <Label x:Name="WorkspaceActiveWorkspaceName" Content="Active Workspace :" Margin="10,14,10,0" VerticalAlignment="Top" Foreground="White"/>
                            <Button x:Name="WorkspaceDeleteButton_Copy" Content="Delete this Workspace" Grid.Column="2" HorizontalAlignment="Left" Margin="180,196,0,0" VerticalAlignment="Top" Width="143" Height="26" Background="#FFAE6060" Click="DeleteWorkspace"/>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
            <Grid Background="#FF2D2D2D">
                <Button x:Name="HomeButton" Height="35" Width="35" BorderThickness="0" BorderBrush="#FF2D2D2D" Background="{x:Null}" Click="HomeButton_Click" >
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="ButtonBase.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation 
                                         Storyboard.TargetName="OverlayGrid"
                                         Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)" 
                                         From="0" To="1" 
                                         Duration="0:0:0.2" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                    <Image HorizontalAlignment="Center" Height="35" Width="35" VerticalAlignment="Center" Source="References/images/home.png"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
