<UserControl x:Class="Quasar.Skins.Views.SkinManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quasar.Skins.Views"
             xmlns:views="clr-namespace:Quasar.Skins.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid Visibility="{Binding SelectionViewActive, Converter={StaticResource BoolVisi}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Style="{StaticResource CutieLabelStyle}" Content="Select your Character" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"></Label>
            <ItemsControl Grid.Row="1" ItemsSource="{Binding CharacterItems}" Margin="10,0,0,0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel></WrapPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
        <Grid Visibility="{Binding DisplayViewActive, Converter={StaticResource BoolVisi}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Background="Black">
                <Button Command="{Binding Path=GoBack}" Width="180" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,15,0,0" Template="{StaticResource CutieSmallButtonTemplate}" Content="Go back to selection"></Button>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock Style="{StaticResource CutieTextBlockStyle}" Margin="0,10" Text="Player 1" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="#f32d35"></TextBlock>
                    <Border BorderBrush="{StaticResource CutieBG24}" BorderThickness="1" CornerRadius="5" Margin="0,50,0,0" Width="100" Height="90" VerticalAlignment="Top" HorizontalAlignment="Center" >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource CutieBG08}"></Setter>
                                <Setter Property="BorderBrush" Value="#c1c1c1"></Setter>
                            </Style>
                        </Border.Style>
                        <Grid Background="Transparent">
                            <Image Width="80" Height="80" Source="{Binding SelectedCharacterItem.CIVM.Slot0String}"></Image>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="1">
                    <TextBlock Style="{StaticResource CutieTextBlockStyle}" Margin="0,10" Text="Player 2" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="#4c63fc"></TextBlock>
                    <Border BorderBrush="{StaticResource CutieBG24}" BorderThickness="1" CornerRadius="5" Margin="0,50,0,0" Width="100" Height="90" VerticalAlignment="Top" HorizontalAlignment="Center" >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource CutieBG08}"></Setter>
                                <Setter Property="BorderBrush" Value="#c1c1c1"></Setter>
                            </Style>
                        </Border.Style>
                        <Grid Background="Transparent">
                            <Image Width="80" Height="80" Source="{Binding SelectedCharacterItem.CIVM.Slot1String}"></Image>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="2">
                    <TextBlock Style="{StaticResource CutieTextBlockStyle}" Margin="0,10" Text="Player 3" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="#fac413"></TextBlock>
                    <Border BorderBrush="{StaticResource CutieBG24}" BorderThickness="1" CornerRadius="5" Margin="0,50,0,0" Width="100" Height="90" VerticalAlignment="Top" HorizontalAlignment="Center" >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource CutieBG08}"></Setter>
                                <Setter Property="BorderBrush" Value="#c1c1c1"></Setter>
                            </Style>
                        </Border.Style>
                        <Grid Background="Transparent">
                            <Image Width="80" Height="80" Source="{Binding SelectedCharacterItem.CIVM.Slot2String}"></Image>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="3">
                    <TextBlock Style="{StaticResource CutieTextBlockStyle}" Margin="0,10" Text="Player 4" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="#1c9f40"></TextBlock>
                    <Border BorderBrush="{StaticResource CutieBG24}" BorderThickness="1" CornerRadius="5" Margin="0,50,0,0" Width="100" Height="90" VerticalAlignment="Top" HorizontalAlignment="Center" >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource CutieBG08}"></Setter>
                                <Setter Property="BorderBrush" Value="#c1c1c1"></Setter>
                            </Style>
                        </Border.Style>
                        <Grid Background="Transparent">
                            <Image Width="80" Height="80" Source="{Binding SelectedCharacterItem.CIVM.Slot3String}"></Image>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="4">
                    <TextBlock Style="{StaticResource CutieTextBlockStyle}" Margin="0,10" Text="Player 5" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="#fd610d"></TextBlock>
                    <Border BorderBrush="{StaticResource CutieBG24}" BorderThickness="1" CornerRadius="5" Margin="0,50,0,0" Width="100" Height="90" VerticalAlignment="Top" HorizontalAlignment="Center" >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource CutieBG08}"></Setter>
                                <Setter Property="BorderBrush" Value="#c1c1c1"></Setter>
                            </Style>
                        </Border.Style>
                        <Grid Background="Transparent">
                            <Image Width="80" Height="80" Source="{Binding SelectedCharacterItem.CIVM.Slot4String}"></Image>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="5">
                    <TextBlock Style="{StaticResource CutieTextBlockStyle}" Margin="0,10" Text="Player 6" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="#24d6c1"></TextBlock>
                    <Border BorderBrush="{StaticResource CutieBG24}" BorderThickness="1" CornerRadius="5" Margin="0,50,0,0" Width="100" Height="90" VerticalAlignment="Top" HorizontalAlignment="Center" >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource CutieBG08}"></Setter>
                                <Setter Property="BorderBrush" Value="#c1c1c1"></Setter>
                            </Style>
                        </Border.Style>
                        <Grid Background="Transparent">
                            <Image Width="80" Height="80" Source="{Binding SelectedCharacterItem.CIVM.Slot5String}"></Image>
                        </Grid>
                    </Border>
                    <Border>

                    </Border>
                </Grid>
                <Grid Grid.Column="6">
                    <TextBlock Style="{StaticResource CutieTextBlockStyle}" Margin="0,10" Text="Player 7" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="#f298b2"></TextBlock>
                    <Border BorderBrush="{StaticResource CutieBG24}" BorderThickness="1" CornerRadius="5" Margin="0,50,0,0" Width="100" Height="90" VerticalAlignment="Top" HorizontalAlignment="Center" >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource CutieBG08}"></Setter>
                                <Setter Property="BorderBrush" Value="#c1c1c1"></Setter>
                            </Style>
                        </Border.Style>
                        <Grid Background="Transparent">
                            <Image Width="80" Height="80" Source="{Binding SelectedCharacterItem.CIVM.Slot6String}"></Image>
                        </Grid>
                    </Border>
                </Grid>
                <Grid Grid.Column="7">
                    <TextBlock Style="{StaticResource CutieTextBlockStyle}" Margin="0,10" Text="Player 8" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Foreground="#8d72dd"></TextBlock>
                    <Border BorderBrush="{StaticResource CutieBG24}" BorderThickness="1" CornerRadius="5" Margin="0,50,0,0" Width="100" Height="90" VerticalAlignment="Top" HorizontalAlignment="Center" >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource CutieBG08}"></Setter>
                                <Setter Property="BorderBrush" Value="#c1c1c1"></Setter>
                            </Style>
                        </Border.Style>
                        <Grid Background="Transparent">
                            <Image Width="80" Height="80" Source="{Binding SelectedCharacterItem.CIVM.Slot7String}"></Image>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            
        </Grid>
    </Grid>
</UserControl>
