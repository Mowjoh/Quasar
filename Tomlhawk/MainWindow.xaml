<Window x:Class="Tomlhawk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tomlhawk"
        mc:Ignorable="d"
        Title="Tomlhawk" Height="200" Width="300" Background="#1D1D1D">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>

        <!--SD Card Selection-->
        <ComboBox x:Name="SDComboBox" Height="30" VerticalAlignment="Top" Margin="120,10,10,0" DisplayMemberPath="Name" />
        <Label Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Foreground="White">Select your SD</Label>

        <!--Mod Path entry-->
        <TextBox Height="20" VerticalAlignment="Top" Margin="10,50,10,0">ultimate/mods</TextBox>

        <!--Options-->
        <CheckBox x:Name="OverwriteCheckBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,90,10,10" Checked="OverwriteCheckBox_Checked"></CheckBox>
        <Label Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,84,0,0" Foreground="White">Overwrite all Toml files</Label>
        <Path Width="30" Height="30" Margin="170,85,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
              Data="M21,3H3v18h18V3z M12.01,18c-0.7,0-1.26-0.56-1.26-1.26c0-0.71,0.56-1.25,1.26-1.25c0.71,0,1.25,0.54,1.25,1.25 C13.25,17.43,12.72,18,12.01,18z M15.02,10.6c-0.76,1.11-1.48,1.46-1.87,2.17c-0.16,0.29-0.22,0.48-0.22,1.41h-1.82 c0-0.49-0.08-1.29,0.31-1.98c0.49-0.87,1.42-1.39,1.96-2.16c0.57-0.81,0.25-2.33-1.37-2.33c-1.06,0-1.58,0.8-1.8,1.48L8.56,8.49 C9.01,7.15,10.22,6,11.99,6c1.48,0,2.49,0.67,3.01,1.52C15.44,8.24,15.7,9.59,15.02,10.6z" Fill="Green" Stroke="Transparent" ToolTip="Select this to overwrite existing Toml Files. Will only edit missing fields" />

        <!--Process Start Button-->
        <Button Margin="10,10,10,10" Height="40" VerticalAlignment="Bottom" Click="LaunchTomlProcess">DO THE STUFF</Button>
    </Grid>
</Window>
